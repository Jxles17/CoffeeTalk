            {% block stylesheets %}
            <style>
            @font-face {
                font-family: 'Playground'; /* Nom de la police */
                src: url('/fonts/playground.woff') format('woff'); /* Chemin vers votre fichier WOFF */
                /* Vous pouvez également ajouter d'autres variantes de la police ici si nécessaire */
            }
            body{
                font-family: "Beckman", sans-serif;
            }
            body{
                background-color: #642B23!important;
                color: #FFE3B9;
            }
            .navbar{
                background-color: transparent!important;
                transition: background-color 0.8s ease; /* Ajouter la transition ici */
            }
            .navbar.scrolled {
                background-color: #642B23!important;
            }
            .navbar-brand, .nav-link{
                color: #FFE3B9;
            }
            .navbar-brand:hover, .nav-link:hover{color: #EFDFD5;}
            .navbar-collapse{
                justify-content: flex-start;
            }
            .navbar-nav {
                justify-content: space-evenly;
                width: 100%;
            }
            .navbar-nav .footer-social{
                justify-content: left;
                width: 20%;
                padding-top: 1.3%;
            }
            .form-inline{
                display: flex;
                flex-direction: row;
            }
            .navbar-brand{
                margin-left: 2%;
                font-size: 30px;
            }
            .banniere-bas-page{
                width: 100%;
                height: 300px;
                background-color: #FFE3B9;
                color: #642B23;
                text-align: center;
                padding: 5%;
            }
            .banniere-bas-page h2{
                font-size: 40px;
            }
            .banniere-bas-page p{
                font-size: 20px;
            }
            .btn{
                margin: 5%;
                color: white;
                border-color: white;
            }
            .center{text-align: center;}
            .texte-copyright{margin: 0 auto; font-size: 10px;}
            .button {
            background-color: #B86D47; /* Green */
            border: solid;
            border-color: #B86D47;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            }
            .buttonreserv {
            background-color: transparent; /* Green */
            border-color: transparent;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            }
            .button:hover{background-color: transparent;}
            .navbar-brand{margin-left: 15%;}
            .acontact{text-decoration: none; color: white;}
            .navbar-nav .nav-link.show {
                color: white;
            }
            .dropdown-menu{background: #642B23;}
            .dropdown-item:hover{background-color: grey;}
            .dropdown-item{color: white;}
            .abtnhome{text-decoration: none; color: white;}
            .navbar {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            }
            .nav-item{
                border-bottom: none;
            }
            .btn {
                display: inline-block;
                padding: 10px 20px;
                margin-top: 10px;
                background-color: #B86D47;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                text-decoration: none;
            }

            .btn:hover {
                background-color: #0056b3;
            }
            .container{margin-top: 5%}
            .footer{display: flex; width: 100%; background-color: #642B23!important; padding-top:2%; color: #FFE3B9}
            .footer-logo{width: 50%} 
            .footer-social, .footer-pages, .footer-legal{width: 30%;}
            .footer-logo h1{text-align: center;}
            .footer-pages ul li a, .footer-legal ul li a{text-decoration: none; color: white; margin: auto;}
            .footer-social, .footer-pages{display: flex; justify-content: center}
            .footer-pages, .footer-legal{flex-direction: column; text-align: center;}
            .fa-brands{margin: 2%}
            .sf-toolbar{background-color: #714423!important}
            li { padding: 10px; border-bottom: 1px solid #ccc; display: flex; justify-content: space-between; align-items: center; }
            li a{color:#FFE3B9!important;}
            .sf-toolbar{display: none!important;}
            .footer-social a{color: #FFE3B9; margin-left:3%;}
            </style>
            {% endblock %}

            {% block javascripts %}
                {% block importmap %}{{ importmap('app') }}{% endblock %}
                <script>
                window.onscroll = function() {scrollFunction()};

                function scrollFunction() {
                var navbar = document.getElementById("navbar");
                if (document.body.scrollTop > 400 || document.documentElement.scrollTop > 400) {
                    navbar.classList.add("scrolled");
                } else {
                    navbar.classList.remove("scrolled");
                }
                }
                </script>
            {% endblock %}
        </head>
