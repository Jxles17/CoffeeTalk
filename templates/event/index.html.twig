{% extends 'base.html.twig' %}

{% block title %}Gestion des événements{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        th,
    td {
    border: 1px solid rgb(160 160 160);
    padding: 8px 10px;
    }
</style>

<div class="example-wrapper">
    <h1>Gestion des événements</h1>

    <a class="btn btn-primary" href="{{ path('event.create') }}">Créer un événement</a>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Date et heure</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.datetime|date('d/m/Y H:i') }}</td>
                    <td>{{ event.description }}</td>
                    <td><img src="{{ asset('uploads/events/' ~ event.imageFilename) }}" alt="{{ event.title }}" style="max-width: 100px;"></td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('event.edit', {id: event.id}) }}">Modifier</a>
                        <form action="{{ path('event.delete', {id: event.id}) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
