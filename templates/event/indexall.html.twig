{% extends 'base.html.twig' %}

{% block title %}Nos événements{% endblock %}

{% block body %}
<style>
    .events-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
    .event-card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s;
        border-radius: 5%;
    }
    .event-card:hover {
        transform: translateY(-10px);
    }
    .event-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 20px;
    }
    .event-content {
        padding: 15px;
    }
    .event-title {
        font-size: 1.5em;
        margin-bottom: 10px;
    }
    .event-date {
        font-size: 1em;
        color: #fff;
        margin-bottom: 10px;
    }
    .event-description {
        font-size: 1em;
        color: #fff;
    }
</style>

<div class="events-wrapper">
    {% for event in events %}
        <div class="event-card">
            <img src="{{ asset('uploads/events/' ~ event.imageFilename) }}" alt="{{ event.title }}" class="event-image">
            <div class="event-content">
                <h2 class="event-title">{{ event.title }}</h2>
                <p class="event-date">{{ event.datetime|date('Y-m-d H:i') }}</p>
                <p class="event-description">{{ event.description }}</p>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
