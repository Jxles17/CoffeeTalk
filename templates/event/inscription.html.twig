{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper img{ margin-bottom: 5%;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    th, td { border: 1px solid rgb(160 160 160); padding: 8px 10px; }
    form {
        margin-top: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="email"],
    textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        background-color: #B86D47;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    button[type="submit"]:hover {
        background-color: #0056b3;
    }
</style>

<div class="example-wrapper">
    <h1>Inscription : {{ event.title }}</h1>
    <p>Date et heure : {{ event.datetime|date('d/m/Y H:i') }}</p>
    <p>Description : {{ event.description }}</p>
    {% if event.imageFileName %}
        <img src="{{ asset('uploads/events/' ~ event.imageFileName) }}" alt="{{ event.title }}" style="max-width: 100%; height: auto;">
    {% endif %}

    <!-- Ajoutez ici le formulaire d'inscription à l'événement -->
    <!-- Vous pouvez personnaliser le formulaire selon les besoins -->

    <form action="{{ path('event_register', {'id': event.id}) }}" method="post">
        <!-- Ajoutez les champs nécessaires pour l'inscription -->
        <!-- Par exemple, nom, prénom, email, etc. -->
        <!-- Assurez-vous que le formulaire envoie les données à la bonne route -->

        <!-- Exemple de champ pour le nom -->
        <label for="name">Nom :</label>
        <input type="text" id="name" name="name" required>

        <!-- Exemple de champ pour l'email -->
        <label for="email">Email :</label>
        <input type="email" id="email" name="email" required>

        <!-- Autres champs à ajouter selon les besoins -->

        <button type="submit">S'inscrire</button>
    </form>
</div>
{% endblock %}
