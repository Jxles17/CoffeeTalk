    <script>// Initialise la carte Leaflet
    var map = L.map("map").setView([0, 0], 2); // Centre la carte sur le monde entier avec un zoom de 2

    // Ajoute une couche de tuiles OpenStreetMap
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 19,
    }).addTo(map);

    // Ajoute des marqueurs pour chaque pays avec un café
    var cafes = [
    { name: "Café 1", location: [51.505, -0.09] }, // Exemple : Londres, Royaume-Uni
    { name: "Café 2", location: [48.8566, 2.3522] }, // Exemple : Paris, France

    // Ajoutez d'autres cafés avec leurs coordonnées géographiques
    ];

    cafes.forEach(function (cafe) {
    L.marker(cafe.location)
        .addTo(map)
        .bindPopup(cafe.name);
    });</script>
