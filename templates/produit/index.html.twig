{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}
<style>
    .products-wrapper {
        max-width: 1200px;
        margin: 0 auto;
    }
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .header-section h1 {
        margin: 0;
    }
    .header-section .btn {
        padding: 10px 20px;
        background-color: #B86D47;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
    }
    .header-section .btn:hover {
        background-color: #0056b3;
    }
    .table {
        width: 100%;
        border-collapse: collapse;
    }
    .table th, .table td {
        border: 1px solid #ddd;
        padding: 8px;
    }
    .table th {
        background-color: #f2f2f2;
        text-align: left;
    }
    .table tr:hover {
        background-color: #f1f1f1;
    }
    .table .btn {
        padding: 5px 10px;
        margin: 0 5px;
        border-radius: 5px;
        text-decoration: none;
    }
    .table .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .table .btn-primary:hover {
        background-color: #0056b3;
    }
    .table .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    .table .btn-danger:hover {
        background-color: #c82333;
    }
</style>

<div class="products-wrapper">
    <div class="header-section">
        <h1>Gestion des produits</h1>
        <a class="btn btn-primary" href="{{ path('produit.create') }}">Cr√©er un produit</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <tr>
                    <td>
                        <a href="{{ path('produit.show', {id: produit.id}) }}">{{ produit.title }}</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('produit.edit', {id: produit.id}) }}">Modifier</a>
                        <form action="{{ path('produit.delete', {id: produit.id}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
