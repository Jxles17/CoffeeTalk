{% extends 'base.html.twig' %}

{% block title %}Modifier l'email{% endblock %}

{% block body %}
<style>
    .form-group {
        margin-bottom: 15px;
    }
    .btn-primary {
        margin-top: 15px;
    }
</style>
<div class="container">
    <h1>Modifier l'email</h1>

    <div class="form-group">
        <label>Ancien email : </label>
        <input type="text" class="form-control" value="{{ app.user.email }}" disabled>
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email, 'Nouvel email') }}
            {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'value': '' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.current_password, 'Mot de passe actuel') }}
            {{ form_widget(form.current_password, { 'attr': { 'class': 'form-control' } }) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
